<?xml version="1.0"?>
<robot name="barista_bot">

  <!-- distance z base_link chassis - length_chassis/2 + wheel_offset(wheel_radius/2) = 0.0775 + 0.0352/2 = 0.0951 -->
  <!-- distance z chassis rods - length_rod/2 + length_chassis/2 + wheel_offset(wheel_radius/2) = 0.110 + 0.0775 = 0.1875 -->
  <!-- distance z chassis tray - length_tray/2 + length_chassis/2 +  length_rod = 0.045 + 0.0775 + 0.220 = 0.3425 -->
  <!-- distance z chassis wheels - (-length_chassis/2) = -0.0775 -->
  <material name="light_gray">
    <color rgba="0.8 0.8 0.8 1" />
  </material>
  <material name="gray">
    <color rgba="0.4 0.4 0.4 1" />
  </material>
  <material name="green_dark">
    <color rgba="0.0 0.5 0.0 1" />
  </material>
  <material name="blue">
    <color rgba="0.0 0.0 1.0 1" />
  </material>
  <material name="black">
    <color rgba="0.0 0.0 0.0 1" />
  </material>
  <material name="white">
    <color rgba="1.0 1.0 1.0 1" />
  </material>
  <link name="base_link"></link>

  <!-- chassis -->
  <link name="chassis">
    <visual>
      <geometry>
        <cylinder length="0.155" radius="0.178" />
      </geometry>
      <material name="blue" />
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.155" radius="0.178" />
      </geometry>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <mass value="1.5" />
      <inertia ixx="0.045" iyy="0.045" izz="0.03" ixy="0.0" ixz="0.0" iyz="0.0" />
    </inertial>
  </link>
  <joint name="base_link_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0.1127" />
    <parent link="base_link" />
    <child link="chassis" />
  </joint>

  <!-- standoff rods -->
  <link name="standoff_rod_1">
    <visual>
      <geometry>
        <cylinder length="0.220" radius="0.010" />
      </geometry>
      <material name="light_gray" />
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.220" radius="0.010" />
      </geometry>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <mass value="0.1" />
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0.0" ixz="0.0"
        iyz="0.0" />
    </inertial>
  </link>
  <link name="standoff_rod_2">
    <visual>
      <geometry>
        <cylinder length="0.220" radius="0.010" />
      </geometry>
      <material name="light_gray" />
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.220" radius="0.010" />
      </geometry>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <mass value="0.1" />
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0.0" ixz="0.0"
        iyz="0.0" />
    </inertial>
  </link>
  <link name="standoff_rod_3">
    <visual>
      <geometry>
        <cylinder length="0.220" radius="0.010" />
      </geometry>
      <material name="light_gray" />
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.220" radius="0.010" />
      </geometry>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <mass value="0.1" />
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0.0" ixz="0.0"
        iyz="0.0" />
    </inertial>
  </link>
  <link name="standoff_rod_4">
    <visual>
      <geometry>
        <cylinder length="0.220" radius="0.010" />
      </geometry>
      <material name="light_gray" />
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.220" radius="0.010" />
      </geometry>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <mass value="0.1" />
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0.0" ixz="0.0"
        iyz="0.0" />
    </inertial>
  </link>

  <joint name="joint_standoff_rod_1" type="fixed">
    <origin rpy="0 0 0" xyz="0.100 0.100 0.1875" />
    <parent link="chassis" />
    <child link="standoff_rod_1" />
  </joint>
  <joint name="joint_standoff_rod_2" type="fixed">
    <origin rpy="0 0 0" xyz="0.100 -0.100 0.1875" />
    <parent link="chassis" />
    <child link="standoff_rod_2" />
  </joint>
  <joint name="joint_standoff_rod_3" type="fixed">
    <origin rpy="0 0 0" xyz="-0.100 -0.100 0.1875" />
    <parent link="chassis" />
    <child link="standoff_rod_3" />
  </joint>
  <joint name="joint_standoff_rod_4" type="fixed">
    <origin rpy="0 0 0" xyz="-0.100 0.100 0.1875" />
    <parent link="chassis" />
    <child link="standoff_rod_4" />
  </joint>

  <!-- cup holder tray -->
  <link name="tray">
    <visual>
      <geometry>
        <cylinder length="0.090" radius="0.160" />
      </geometry>
      <material name="blue" />
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.090" radius="0.160" />
      </geometry>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <mass value="0.5" />
      <inertia ixx="0.01" iyy="0.01" izz="0.005" ixy="0.0" ixz="0.0" iyz="0.0" />
    </inertial>
  </link>
  <joint name="joint_tray" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0.3425" />
    <parent link="chassis" />
    <child link="tray" />
  </joint>

  <!-- Wheel Left -->
  <link name="left_wheel">
    <visual>
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
      <geometry>
        <cylinder length="0.0206" radius="0.0352" />
      </geometry>
      <material name="black" />
    </visual>
    <collision>
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
      <geometry>
        <cylinder length="0.0206" radius="0.0352" />
      </geometry>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <mass value="0.2" />
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0002" ixy="0.0" ixz="0.0"
        iyz="0.0" />
    </inertial>
  </link>
  <joint name="joint_left_wheel" type="continuous">
    <origin rpy="0 0 0" xyz="0 0.140 -0.0775" />
    <child link="left_wheel" />
    <parent link="chassis" />
    <axis rpy="0 0 0" xyz="0 1 0" />
    <limit effort="10000" velocity="1000" />
    <joint_properties damping="1.0" friction="1.0" />
  </joint>

  <!-- Wheel Right -->
  <link name="right_wheel">
    <visual>
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
      <geometry>
        <cylinder length="0.0206" radius="0.0352" />
      </geometry>
      <material name="black" />
    </visual>
    <collision>
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
      <geometry>
        <cylinder length="0.0206" radius="0.0352" />
      </geometry>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <mass value="0.2" />
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0002" ixy="0.0" ixz="0.0"
        iyz="0.0" />
    </inertial>
  </link>
  <joint name="joint_right_wheel" type="continuous">
    <origin rpy="0 0 0" xyz="0 -0.140 -0.0775" />
    <child link="right_wheel" />
    <parent link="chassis" />
    <axis rpy="0 0 0" xyz="0 1 0" />
    <limit effort="10000" velocity="1000" />
    <joint_properties damping="1.0" friction="1.0" />
  </joint>

  <!-- front caster Wheel -->
  <link name="front_caster_wheel">
    <visual>
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
      <geometry>
        <sphere radius="0.0352" />
      </geometry>
      <material name="green_dark" />
    </visual>
    <collision>
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
      <geometry>
        <sphere radius="0.0352" />
      </geometry>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <mass value="0.05" />
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0.0" ixz="0.0"
        iyz="0.0" />
    </inertial>
  </link>
  <joint name="front_pitch_joint" type="continuous">
    <origin rpy="0 0 0" xyz="0.140 0 -0.0775" />
    <parent link="chassis" />
    <child link="front_caster_wheel" />
    <axis xyz="0 1 0" />
    <limit effort="1000.0" velocity="100.0" />
    <dynamics damping="0.0" friction="0.1" />
  </joint>

  <!-- back caster Wheel -->
  <link name="back_caster_wheel">
    <visual>
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
      <geometry>
        <sphere radius="0.0352" />
      </geometry>
      <material name="green_dark" />
    </visual>
    <collision>
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
      <geometry>
        <sphere radius="0.0352" />
      </geometry>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0" />
      <mass value="0.05" />
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0.0" ixz="0.0"
        iyz="0.0" />
    </inertial>
  </link>
  <joint name="back_pitch_joint" type="continuous">
    <origin rpy="0 0 0" xyz="-0.140 0 -0.0775" />
    <parent link="chassis" />
    <child link="back_caster_wheel" />
    <axis xyz="0 1 0" />
    <limit effort="1000.0" velocity="100.0" />
    <dynamics damping="0.0" friction="0.1" />
  </joint>

  <!-- Laser model -->
  <link name="laser_scanner">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 -0.0225"/>
      <geometry>
        <mesh filename="package://barista_robot_description/meshes/sick_microscan3.dae" scale="0.5 0.5 0.5"/>
      </geometry>
    </visual>
    <collision>
       <origin rpy="0 0 0" xyz="0 0 0.0204"/>
      <geometry>
        <cylinder length="0.0408" radius="0.037493"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.01"/>
      <origin rpy="0 0 0" xyz="0 0 0.0204"/>
      <inertia ixx="6.066578520833334e-06" ixy="0" ixz="0" iyy="6.072950163333333e-06" iyz="0" izz="9.365128684166666e-06"/>
    </inertial>
  </link>
  <!-- 0.0775 -->
  <joint name="joint_laser_scanner" type="continuous">
    <origin rpy="0 0 0" xyz="0.120 0.0 0.1"/>
    <parent link="chassis"/>
    <child link="laser_scanner"/>
    <axis xyz="0 0 1"/>
    <limit effort="10.0" velocity="2.0"/>
    <dynamics friction="0.01"/>
  </joint>

  <!-- Gazebo materials -->
  <gazebo reference="chassis">
    <material>Gazebo/Blue</material>
  </gazebo>

  <gazebo reference="standoff_rod_1">
    <material>Gazebo/Gray</material>
  </gazebo>

  <gazebo reference="standoff_rod_2">
    <material>Gazebo/Gray</material>
  </gazebo>

  <gazebo reference="standoff_rod_3">
    <material>Gazebo/Gray</material>
  </gazebo>
  
  <gazebo reference="standoff_rod_4">
    <material>Gazebo/Gray</material>
  </gazebo>  

  <gazebo reference="tray">
    <material>Gazebo/Blue</material>
  </gazebo>

  <gazebo reference="left_wheel">
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="right_wheel">
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="back_caster_wheel">
    <material>Gazebo/Green</material>
  </gazebo>

  <gazebo reference="front_caster_wheel">
    <material>Gazebo/Green</material>
  </gazebo>


  <!-- PLUGINS -->

  <!-- JOINT PUBLISHER -->
  <gazebo>
    <plugin name="box_bot_joint_state" filename="libgazebo_ros_joint_state_publisher.so">
      <ros>
          <remapping>~/out:=joint_states</remapping>
      </ros>
      <update_rate>30</update_rate>

      <joint_name>joint_left_wheel</joint_name>
      <joint_name>joint_right_wheel</joint_name>
      <joint_name>front_yaw_joint</joint_name>
      <joint_name>back_yaw_joint</joint_name>
      <joint_name>front_roll_joint</joint_name>
      <joint_name>back_roll_joint</joint_name>
      <joint_name>front_pitch_joint</joint_name>
      <joint_name>back_pitch_joint</joint_name>
      <joint_name>joint_laser_scanner</joint_name>
      
    </plugin>
  </gazebo>

  <!-- Differential drive -->
  <gazebo>
    <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">

      <!-- wheels -->
      <left_joint>joint_left_wheel</left_joint>
      <right_joint>joint_right_wheel</right_joint>

      <!-- kinematics -->
      <wheel_separation>0.1</wheel_separation>
      <wheel_diameter>0.07</wheel_diameter>

      <!-- limits -->
      <max_wheel_torque>1.0</max_wheel_torque>
      <max_wheel_acceleration>2.0</max_wheel_acceleration>

      <!-- output -->
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>

      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_link</robot_base_frame>

    </plugin>
  </gazebo>

  <gazebo reference="laser_scanner">
    <sensor name="sensor_ray" type="ray">
        <pose>0 0 0 0 0 0</pose>
        <ray>
          <scan>
            <horizontal>
              <samples>200</samples>
              <resolution>1.0</resolution>
              <min_angle>-3.14</min_angle>
              <max_angle>3.14</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.1</min>
            <max>5.0</max>
          </range>
        </ray>
        <always_on>true</always_on>
        <visualize>true</visualize>
        <update_rate>100.0</update_rate>
        <plugin name="laser" filename="libgazebo_ros_ray_sensor.so">
          <ros>
            <remapping>~/out:=scan</remapping>
          </ros>
          <output_type>sensor_msgs/LaserScan</output_type>
        </plugin>
    </sensor>
  </gazebo>

</robot>
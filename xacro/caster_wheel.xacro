<?xml version="1.0"?>
<robot
  xmlns:xacro="http://www.ros.org/wiki/xacro"
  name="caster_wheel">

  <xacro:property name="caster_radius" value="0.0352" />
  <xacro:property name="caster_mass" value="0.05" />
  <xacro:property name="M_PI" value="3.14159265359" />

  <xacro:macro name="caster_wheel" params="prefix parent *origin">
    <link name="${prefix}_caster_wheel">
      <visual>
        <origin rpy="0 ${M_PI/2} ${M_PI/2}" xyz="0 0 0" />
        <geometry>
          <sphere radius="${caster_radius}" />
        </geometry>
        <material name="green_dark" />
      </visual>
      <collision>
        <origin rpy="0 ${M_PI/2} ${M_PI/2}" xyz="0 0 0" />
        <geometry>
          <sphere radius="${caster_radius}" />
        </geometry>
      </collision>
      <inertial>
        <origin rpy="0 0 0" xyz="0 0 0" />
        <mass value="${caster_mass}" />
        <inertia
          ixx="0.0001"
          iyy="0.0001"
          izz="0.0001"
          ixy="0.0"
          ixz="0.0"
          iyz="0.0" />
      </inertial>
    </link>
    <joint name="${prefix}_pitch_joint" type="continuous">
      <xacro:insert_block name="origin" />
      <parent link="${parent}" />
      <child link="${prefix}_caster_wheel" />
      <axis xyz="0 1 0" />
      <limit effort="1000.0" velocity="100.0" />
      <dynamics damping="0.0" friction="0.1" />
    </joint>
  </xacro:macro>
</robot>
